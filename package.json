{
    "name": "phpdoc-comment-vscode-plugin",
    "displayName": "phpdoc-comment-vscode-plugin",
    "description": "Add phpdoc @param and @return tag for selected function signatures.",
    "version": "1.0.7",
    "publisher": "rexshi",
    "icon": "images/logo.png",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/shishirui/phpdoc-comment-vscode-plugin"
    },
    "activationEvents": [
        "onCommand:extension.addPHPComment"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.addPHPComment",
                "title": "Add PHPDoc Comment"
            }
        ],
        "keybindings": [{
            "command": "extension.addPHPComment",
            "key": "ctrl+shift+i",
            "mac": "cmd+shift+i",
            "when": "editorTextFocus"   
        }],
        "menus": {
            "editor/context": [{
                "command": "extension.addPHPComment",
                "when": "resourceLangId == php"
            }]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "indent-string": "^2.1.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}